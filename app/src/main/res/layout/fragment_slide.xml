<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">


    <ImageView
        android:id="@+id/animationMedicall"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/text_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/image_description" />

    <ImageView
        android:id="@+id/medicallImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:srcCompat="@drawable/logo_wootask"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toTopOf="@id/text_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/animationMedicall" />

    <ImageView
        android:id="@+id/animationVoz"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleY="1.3"
        android:scaleX="1.2"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/text_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/image_description" />

    <ImageView
        android:id="@+id/vozImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:srcCompat="@drawable/logo_wootask"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toTopOf="@id/text_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/animationVoz" />

    <ImageView
        android:id="@+id/animationAsk"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/text_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/image_description" />

    <ImageView
        android:id="@+id/askImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        app:srcCompat="@drawable/logo_wootask"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toTopOf="@id/text_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/animationAsk" />

    <ImageView
        android:id="@+id/imageFragment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:srcCompat="@drawable/splash_logopng"
        android:contentDescription="@string/image_description"
        app:layout_constraintBottom_toTopOf="@id/text_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:text="@string/policiy_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/text_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:text="@string/policiy_text"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_up" />

</androidx.constraintlayout.widget.ConstraintLayout>